<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:androidtools="http://schemas.android.com/apk/res-auto"
    package="com.masstersoft.weather">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <meta-data android:name="AA_DB_NAME" android:value="myBD3.db" />
    <meta-data android:name="AA_DB_VERSION" android:value="6" />
    <application
        android:name=".launch.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"

        >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="mytestdatabase2.db" />

        <!-- Notice this tag which provides the database version -->
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />


        <activity
            android:name=".launch.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".launch.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".launch.DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>

    </application>


</manifest>
