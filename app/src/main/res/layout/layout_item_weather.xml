<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2015-10-10 00:00:00"
        android:textSize="@dimen/list_date_size"
        android:textColor="@color/list_items_color"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/tvFromTemp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/list_temp_size"
            android:textColor="@color/list_items_color"
            android:text="от -0.33 С"/>
        <TextView
            android:id="@+id/tvToTemp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/list_temp_size"
            android:textColor="@color/list_items_color"
            android:text="до -0.17 С"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/list_humidity_size"
        android:textColor="@color/list_items_color"
        android:text="Влажность: 73%"/>
</LinearLayout>